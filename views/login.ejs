<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title%></title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/login_style.css">
</head>
<body>
    <%- include('header') %>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-2 col-xs-6 myform">
                <form action="/users/login" method="post">
                    <span>登录</span>
                    <div class="form-group">
                        <input class="form-control" placeholder="请输入用户名" type="text" name="username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="请输入密码" name="password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> 记住密码
                        </label>
                    </div>
                    <input type="submit" value="登录" class="form-group btn btn-danger btn-block">
                </form>
            </div>
            <div class="col-md-4 col-xs-6">
                <img src="/images/loginbg.png" class="img-responsive">
            </div>
        </div>
    </div>
    <%- include('footer') %>
</body>
<script src="/javascripts/jquery-3.2.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/layer/layer.js"></script>
<script>
    var error = '<%= locals.error%>';
    if (error){
        layer.msg(error);
    }
</script>

</html>